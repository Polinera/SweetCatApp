<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SweetCatApp.Views.DetailedCatView"
             >
    <ContentPage.Content>
        
        <VerticalStackLayout>

            <Frame Style="{StaticResource DetailedCatFrameStyle}">

                <Image Source="{Binding Image}"
                       Aspect="AspectFill" />
            </Frame>

            <Label 
                Style="{StaticResource DetailedCatLabelStyle}"
                Text="{Binding Name}"
                FontSize="Large" />
            
            <Label 
                Style="{StaticResource DetailedCatLabelStyle}"
                Text="{Binding Description}"
                FontSize="Medium" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>

